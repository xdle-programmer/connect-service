{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "components/*": [
                "src/components/*"
            ],
            "hooks/*": [
                "src/hooks/*"
            ],
            "services/*": [
                "src/services/*"
            ],
            "utils/*": [
                "src/utils/*"
            ]
        },
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    }
}
